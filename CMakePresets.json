{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "cmake-pedantic",
      "hidden": true,
      "warnings": {
        "dev": true,
        "deprecated": true,
        "uninitialized": true,
        "unusedCli": true,
        "systemVars": false
      },
      "errors": {
        "deprecated": true
      }
    },
    {
      "name": "disable-osg",
      "hidden": true,
      "cacheVariables": {
        "USE_OSG": "OFF"
      }
    },
    {
      "name": "disable-osi",
      "hidden": true,
      "cacheVariables": {
        "USE_OSI": "OFF"
      }
    },
    {
      "name": "disable-sumo",
      "hidden": true,
      "cacheVariables": {
        "USE_SUMO": "OFF"
      }
    },
    {
      "name": "disable-implot",
      "hidden": true,
      "cacheVariables": {
        "USE_IMPLOT": "OFF"
      }
    },
    {
      "name": "sanitize-build",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_SANITIZERS": "ON",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "test-win_unix",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_WARNINGS_AS_ERRORS": "ON",
        "ENABLE_STATIC_ANALYSIS": "OFF",
        "ENABLE_INCLUDE_WHAT_YOU_USE": "OFF"
      }
    },
    {
      "name": "test-linux",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_WARNINGS_AS_ERRORS": "ON",
        "ENABLE_STATIC_ANALYSIS": "ON",
        "ENABLE_INCLUDE_WHAT_YOU_USE": "ON"
      }
    },
    {
      "name": "ci-build",
      "binaryDir": "${sourceDir}/build",
      "hidden": true
    },
    {
      "name": "ci-win64-2022",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "hidden": true
    },
    {
      "name": "ci-win64-2019",
      "generator": "Visual Studio 16 2019",
      "architecture": "x64",
      "toolset": "v142",
      "hidden": true
    },
    {
      "name": "ci-unix",
      "generator": "Ninja",
      "hidden": true
    },
    {
      "name": "ci-windows-2022",
      "inherits": [
        "ci-build",
        "ci-win64-2022"
      ]
    },
    {
      "name": "ci-windows-2019",
      "inherits": [
        "ci-build",
        "ci-win64-2019"
      ]
    },
    {
      "name": "ci-macos",
      "inherits": [
        "ci-build",
        "ci-unix"
      ]
    },
    {
      "name": "ci-ubuntu_release",
      "inherits": [
        "ci-build",
        "ci-unix"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ci-sanitize-ubuntu",
      "inherits": [
        "ci-ubuntu_release",
        "disable-osg",
        "sanitize-build"
      ]
    },
    {
      "name": "ci-sanitize-macos",
      "inherits": [
        "ci-ubuntu_release",
        "disable-osg",
        "sanitize-build"
      ]
    },
    {
      "name": "ci-windows-test",
      "inherits": [
        "ci-windows-2019",
        "test-win_unix"
      ]
    },
    {
      "name": "ci-macos-test",
      "inherits": [
        "ci-macos",
        "test-win_unix"
      ],
      "cacheVariables": {
        "ENABLE_WARNINGS_AS_ERRORS": "OFF"
      }
    },
    {
      "name": "ci-ubuntu-test",
      "inherits": [
        "ci-ubuntu_release",
        "test-linux"
      ]
    },
    {
      "name": "ci-windows-test-no-external-modules",
      "inherits": [
        "ci-windows-test",
        "disable-osg",
        "disable-osi",
        "disable-sumo",
        "disable-implot"
      ]
    },
    {
      "name": "ci-macos-test-no-external-modules",
      "inherits": [
        "ci-macos-test",
        "disable-osg",
        "disable-osi",
        "disable-sumo",
        "disable-implot"
      ],
      "cacheVariables": {
        "ENABLE_WARNINGS_AS_ERRORS": "OFF"
      }
    },
    {
      "name": "ci-ubuntu-test-no-external-modules",
      "inherits": [
        "ci-ubuntu-test",
        "disable-osg",
        "disable-osi",
        "disable-sumo",
        "disable-implot"
      ]
    },
    {
      "name": "ubuntu_release",
      "inherits": [
        "ci-build",
        "ci-unix"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ubuntu_debug",
      "inherits": [
        "ci-build",
        "ci-unix"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-2019_release",
      "inherits": [
        "ci-build",
        "ci-win64-2019"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-2019_debug",
      "inherits": [
        "ci-build",
        "ci-win64-2019"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-2022_release",
      "inherits": [
        "ci-build",
        "ci-win64-2022"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-2022_debug",
      "inherits": [
        "ci-build",
        "ci-win64-2022"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos_release",
      "inherits": [
        "ci-build",
        "ci-unix"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "macos_debug",
      "inherits": [
        "ci-build",
        "ci-unix"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ]
}
